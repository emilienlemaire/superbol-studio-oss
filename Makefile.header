PROJECT=superbol_vscode_platform
SRCDIR=src/superbol-vscode-platform

compile:
	opam exec -- dune build
	cp -f _build/default/src/vscode-package-json/main.exe vscode-package-json
	yarn esbuild _build/default/$(SRCDIR)/$(PROJECT).bc.js \
                --bundle \
                --external:vscode \
                --outdir=dist \
                --platform=node \
                --target=es6 \
                --sourcemap
# the last command generated dist/$(PROJECT).bs.js

.PHONY: compile-release
compile-release:
	opam exec -- dune build $(SRCDIR)/$(PROJECT).bc.js --profile=release
	yarn esbuild _build/default/$(SRCDIR)/$(PROJECT).bc.js \
                --bundle \
                --external:vscode \
                --outdir=dist \
                --platform=node \
                --target=es6 \
                --minify-whitespace \
                --minify-syntax \
                --sourcemap \
                --sources-content=false

